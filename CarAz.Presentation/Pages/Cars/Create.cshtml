@page
@model CarAz.Presentation.Pages.Cars.CreateModel
@{
    ViewData["Title"] = "Add New Car";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Add New Car</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Car.Brand" class="form-label">Brand *</label>
                                    <input asp-for="Car.Brand" class="form-control" required>
                                    <span asp-validation-for="Car.Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Car.Model" class="form-label">Model *</label>
                                    <input asp-for="Car.Model" class="form-control" required>
                                    <span asp-validation-for="Car.Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.Year" class="form-label">Year *</label>
                                    <input asp-for="Car.Year" class="form-control" type="number" min="1900" max="@(DateTime.Now.Year + 1)" required>
                                    <span asp-validation-for="Car.Year" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.Price" class="form-label">Price *</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="Car.Price" class="form-control" type="number" step="0.01" min="0" required>
                                    </div>
                                    <span asp-validation-for="Car.Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.Mileage" class="form-label">Mileage (km) *</label>
                                    <input asp-for="Car.Mileage" class="form-control" type="number" min="0" required>
                                    <span asp-validation-for="Car.Mileage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.FuelType" class="form-label">Fuel Type *</label>
                                    <select asp-for="Car.FuelType" class="form-select" required>
                                        <option value="">Select Fuel Type</option>
                                        <option value="Gasoline">Gasoline</option>
                                        <option value="Diesel">Diesel</option>
                                        <option value="Electric">Electric</option>
                                        <option value="Hybrid">Hybrid</option>
                                        <option value="Plug-in Hybrid">Plug-in Hybrid</option>
                                    </select>
                                    <span asp-validation-for="Car.FuelType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.Transmission" class="form-label">Transmission *</label>
                                    <select asp-for="Car.Transmission" class="form-select" required>
                                        <option value="">Select Transmission</option>
                                        <option value="Manual">Manual</option>
                                        <option value="Automatic">Automatic</option>
                                        <option value="CVT">CVT</option>
                                    </select>
                                    <span asp-validation-for="Car.Transmission" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label asp-for="Car.Color" class="form-label">Color *</label>
                                    <input asp-for="Car.Color" class="form-control" required>
                                    <span asp-validation-for="Car.Color" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Car.Status" class="form-label">Status *</label>
                                    <select asp-for="Car.Status" class="form-select" required>
                                        <option value="">Select Status</option>
                                        <option value="For Sale">For Sale</option>
                                        <option value="For Rent">For Rent</option>
                                        <option value="Sold">Sold</option>
                                        <option value="Rented">Rented</option>
                                    </select>
                                    <span asp-validation-for="Car.Status" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Car.ImageUrl" class="form-label">Image URL</label>
                                    <input asp-for="Car.ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg">
                                    <span asp-validation-for="Car.ImageUrl" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Car.Description" class="form-label">Description</label>
                            <textarea asp-for="Car.Description" class="form-control" rows="4" placeholder="Describe the car's condition, features, and any additional information..."></textarea>
                            <span asp-validation-for="Car.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="Car.IsAvailable" class="form-check-input" type="checkbox" checked>
                                <label asp-for="Car.IsAvailable" class="form-check-label">
                                    Car is available for booking
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Cars
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Car
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 